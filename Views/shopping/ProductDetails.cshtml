@model IEnumerable<ProductDetails>
@{
    Layout = "~/Views/Shared/_Layoutshopping.cshtml";
}
<style>
    .background {
        background-image: linear-gradient(to right,#c9d6ff, #e2e2e2);
    }

    .checked {
        color: orange;
    }
</style>

<title>ProductDetails</title>

<div class="background">
    <section class="vh-100 ">
        <div class="container h-100 ">
            @foreach (var item in Model)
            {
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col">
                        <p><span class="h2">ProductDetails</span></p>

                        <div class="card mb-4">
                            <div class="card-body p-4">

                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <img src="~/assets/images/@item.Image"
                                             class="img-fluid" alt="Generic placeholder image">
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Description</p>
                                            <p class="lead fw-normal mb-0">@item.ProductName</p>
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Color</p>
                                            <p class="lead fw-normal mb-0">
                                                @item.Color
                                            </p>
                                        </div>
                                    </div>

                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Model</p>
                                            <p class="lead fw-normal mb-0">@item.Model </p>
                                        </div>
                                    </div>
                                    <div class="col-md-2 d-flex justify-content-center">
                                        <div>
                                            <p class="small text-muted mb-4 pb-2">Price</p>
                                            <p class="lead fw-normal mb-0">@item.Price SAR</p>
                                        </div>
                                        
                             
                                    </div>
                                    <div class="col-md-2 d-flex  mt-5 checked text-end mx-2">
                                        <span><i class="fa fa-star" aria-hidden="true"></i></span>
                                        <span><i class="fa fa-star" aria-hidden="true"></i></span>
                                        <span><i class="fa fa-star" aria-hidden="true"></i></span>
                                        <span><i class="fa fa-star" aria-hidden="true"></i></span>
                                        <span><i class="fa fa-star" aria-hidden="true"></i></span>
                                    </div>
                                </div>

                            </div>
                        </div>



                        <div class="d-flex justify-content-end">
                            <a asp-action="index" type="button" class="btn btn-light btn-lg me-2">Continue shopping</a>
                            <a asp-action="Checout" asp-route-id="@item.Id" type="button" class="btn btn-light btn-lg">Add to cart</a>
                        </div>

                    </div>
                </div>
            }
        </div>
    </section>
</div>
